{
    // by https://github.com/shivrajevo/vscode-settings
    "editor.fontSize": 18,
    "editor.fontFamily": "JetBrains Mono,fira code",
    "editor.fontLigatures": true,
    "editor.mouseWheelZoom": true,
    "editor.linkedEditing": true,
    "javascript.suggest.completeFunctionCalls": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "workbench.iconTheme": "material-icon-theme",
    "explorer.confirmDelete": false,
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforesRun": true,

    // edit monokai theme
    "workbench.colorCustomizations": {
        "[Monokai]": {
            "titleBar.activeBackground": "#000000",
            "titleBar.border": "#2e2e2e",
            "editor.background": "#020202",
            "editorLineNumber.activeForeground": "#7dff1a",
            "editor.lineHighlightBackground": "#1d1d1d",
            "activityBar.background": "#000000",
            "activityBar.activeBackground": "#1f8ce6",
            "activityBar.activeBorder": "#ffffff",
            "activityBar.border": "#2e2e2e",
            "sideBar.background": "#000000",
            "sideBarSectionHeader.background": "#2e2e2e",
            "sideBar.border": "#ffffff",
            "editorGroupHeader.tabsBackground": "#000000",
            "editorGroupHeader.border": "#2e2e2e",
            "tab.inactiveBackground": "#171717",
            "tab.activeBackground": "#000000",
            "tab.activeBorderTop": "#171717",
            "tab.activeBorder": "#eeff00",
            "menu.background": "#000000f1",
            "menu.selectionBackground": "#1f8ce6",
            "menu.selectionForeground": "#ffffff",
            "menu.border": "#ffffff77",
            "menu.separatorBackground": "#ffffff7b",
            "menubar.selectionBackground": "#1f8ce6",
            "menubar.selectionForeground": "#ffffff",
            "scrollbarSlider.activeBackground": "#1f8ce68f",
            "statusBar.background": "#000000",
            "statusBar.border": "#2e2e2e",
            "editorGroup.emptyBackground": "#111111",
            "editorSuggestWidget.background": "#1d1d1d"
        },
    },

    "liveServer.settings.CustomBrowser": "chrome:PrivateMode",
    "git.autofetch": true,
    "workbench.startupEditor": "none",
    "window.title": "${dirty} ${activeEditorShort} @ ${rootName} ${separator}${profileName}",
    "redhat.telemetry.enabled": true,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "liveServer.settings.donotVerifyTags": true,
    "terminal.integrated.confirmOnKill": "never",
    "terminal.explorerKind": "external",
    "code-runner.executorMap": {
        "javascript": "nodemon"
    },
    "python.defaultInterpreterPath": "C:\\Program Files\\Python311\\python.exe",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5000,
    "breadcrumbs.enabled": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "black-formatter.showNotifications": "always",
    "python.analysis.completeFunctionParens": true,
    // "code-runner.saveFileBeforeRun": true,
    "code-runner.saveAllFilesBeforeRun": true,
    "workbench.colorTheme": "Monokai",
    "mdb.showMongoDBConnectionExplorer": true,
    // c++ settings
    "C_Cpp.intelliSenseUpdateDelay": 500,
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.default.compilerPath": "C:/msys64/mingw64/bin",
    "C_Cpp.default.includePath": [
        "C:/msys64/mingw64/include",
    ],
    "liveServer.settings.donotShowInfoMsg": true,
    "git.enableSmartCommit": true,
    "emmet.includeLanguages": {
        "django-html": "html"
    },
    "python.languageServer": "Pylance",
    "prettier.htmlWhitespaceSensitivity": "ignore",
    "prettier.bracketSameLine": true,
    "git.confirmSync": false,
    "workbench.editorAssociations": {
        "*.docx": "default"
    },
    "explorer.confirmPasteNative": false,
    "window.zoomLevel": 0.7,
}